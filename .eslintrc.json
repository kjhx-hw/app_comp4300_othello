{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "max-len": [
            "error",
            {
                "code": 140,
                "ignoreUrls": true,
                "ignoreTemplateLiterals": true
            }
        ],
        "no-unreachable-loop": [
            "error"
        ],
        "block-scoped-var": "error",
        "default-case": "error",
        "eqeqeq": "error",
        "dot-notation": "error",
        "no-else-return": "error",
        "no-multi-spaces": "error",
        "no-magic-numbers": [
            "error",
            {
                "ignore": [
                    0
                ],
                "ignoreDefaultValues": true
            }
        ],
        "no-useless-return": "error",
        "yoda": "error",
        "no-undef-init": "error",
        "capitalized-comments": [
            "error"
        ],
        "comma-spacing": [
            "error",
            {
                "before": false,
                "after": true
            }
        ],
        "array-bracket-newline": [
            "error",
            {
                "multiline": true
            }
        ],
        "brace-style": "error",
        "camelcase": "error",
        "keyword-spacing": [
            "error",
            {
                "before": true
            }
        ],
        "key-spacing": [
            "error",
            {
                "afterColon": true
            }
        ],
        "one-var": [
            "error",
            "never"
        ],
        "no-var": "error",
        "prefer-const": "error"
    }
}
