{
    "env": {
        "browser": true,
        "node": true,
        "jest": true,
        "commonjs": true,
        "es2021": true
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "react/prop-types": 0,
        "no-unreachable-loop": [
            "error"
        ],
        "block-scoped-var": "error",
        "default-case": "error",
        "eqeqeq": "error",
        "dot-notation": "error",
        "no-else-return": "error",
        "no-multi-spaces": "error",
        "no-useless-return": "error",
        "yoda": "error",
        "no-undef-init": "error",
        "capitalized-comments": [
            "error"
        ],
        "comma-spacing": [
            "error",
            {
                "before": false,
                "after": true
            }
        ],
        "array-bracket-newline": [
            "error",
            {
                "multiline": true
            }
        ],
        "brace-style": "error",
        "camelcase": "error",
        "keyword-spacing": [
            "error",
            {
                "before": true
            }
        ],
        "key-spacing": [
            "error",
            {
                "afterColon": true
            }
        ],
        "one-var": [
            "error",
            "never"
        ],
        "no-var": "error",
        "prefer-const": "error"
    }
}
